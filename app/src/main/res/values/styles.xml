<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="AppTheme.AppBarThemeLight" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.ToolbarThemeLight" parent="ThemeOverlay.AppCompat.Light" />

    <!--<style name="RatingBar" parent="Theme.AppCompat">-->
        <!--<item name="colorControlNormal">@android:color/white</item>-->
        <!--<item name="colorControlActivated">@android:color/white</item>-->
    <!--</style>-->

    <style name="RatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="AppCompatButton_default" parent="Base.Widget.AppCompat.Button">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="AppCompatButton_default_borderless" parent="AppCompatButton_default">
        <item name="android:background">@drawable/abc_btn_borderless_material</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textView_default">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="button_default">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="et_setting" parent="textView_default">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
    </style>

    <!--android:paddingBottom="@dimen/_5sdp"-->
    <!--android:paddingEnd="@dimen/_15sdp"-->
    <!--android:paddingStart="@dimen/_15sdp"-->
    <!--android:paddingTop="@dimen/_5sdp"-->
    <style name="tv_label_setting" parent="textView_default">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/pink</item>
        <item name="tabSelectedTextColor">@color/pink</item>

    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>


    <style name="toggleButton_default">
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>


    <style name="textInputLayout_default" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>


    <style name="btnBack_default" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:layout_width">@dimen/_15sdp</item>
        <item name="android:layout_height">@dimen/_15sdp</item>
        <item name="android:background">@drawable/ic_back_arrow</item>
    </style>


</resources>
